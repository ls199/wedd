@model WebApplication1.ViewModels.EmployeeListViewModel

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>@Model.UserName,@Model.Greeting</h2>
    <p><a href="/employee/addNew">新增</a></p>
   
    <div> 
        <form action="/employee/Search" method="post">
            请输入内容：<input type="text" name="searchString" value=""> <input type="submit" value="查询">
        </form>
        <ul>           
            @foreach (var item in Model.EmployeeViewList)
            {
                <li>@item.EmployeeName,@item.EmployeeSalary,@item.EmployeeGrade, 
                <a href="/employee/delete/@item.EmployeeId">删除</a> 
                <a href="/employee/Edit/@item.EmployeeId">修改</a></li>
            }

        </ul>     
    </div>   
</body>
</html>

